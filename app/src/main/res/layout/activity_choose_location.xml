<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/register_background"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/included_tap"
            layout="@layout/login_app_bar"
            />

        <TextView
            android:id="@+id/signInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_account"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/included_tap"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/arabicsemibold"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/signInLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textColor="@color/blue_500"
                    android:textSize="19sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_location_from_map"
                    android:textColor="@color/blue_500"
                    android:textSize="17sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <TextView
                        app:layoutDescription="@id/ownerNameET"
                        android:id="@+id/ownerNameET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/mapIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/mapIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20sp"
                        android:src="@drawable/crosshair"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_your_location_manually"
                    android:textColor="@color/blue_500"
                    android:textSize="19sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city"
                    android:textColor="@color/blue_500"
                    android:textSize="17sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_city_et"
                    android:backgroundTint="#F5F5F5"
                    >

                    <EditText
                        app:layoutDescription="@id/cityET"
                        android:id="@+id/cityET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/area"
                android:textColor="@color/blue_500"
                android:textSize="17sp"
                android:fontFamily="@font/arabicsemibold"
                android:layout_marginTop="22dp"
                android:layout_marginStart="25dp"
                />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <EditText
                        app:layoutDescription="@id/areaEt"
                        android:id="@+id/areaEt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_in_detail"
                android:textColor="@color/blue_500"
                android:textSize="17sp"
                android:fontFamily="@font/arabicsemibold"
                android:layout_marginTop="22dp"
                android:layout_marginStart="25dp"
                />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <EditText
                        app:layoutDescription="@id/establishmentNameET"
                        android:id="@+id/addressInDetailEt"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:singleLine="true"
                        android:padding="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <TextView
                        app:layoutDescription="@id/establishmentNameET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:paddingStart="15sp"
                        android:text="@string/your_shop_s_photo"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <LinearLayout
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="@color/blue_500"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginEnd="10dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/upload"
                            android:backgroundTint="@color/white"
                            android:layout_marginEnd="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload"
                            android:textColor="@color/white"
                            android:textSize="15sp"

                            />


                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/termsAndConditionsCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                    <TextView
                        android:id="@+id/approveText"
                        app:layout_constraintStart_toEndOf="@id/termsAndConditionsCheckbox"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/i_approve_on"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicmedium"
                        />
                    <TextView
                        android:id="@+id/termsAndConditions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_and_conditions"
                        app:layout_constraintStart_toEndOf="@id/approveText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/arabicsemibold"
                        android:textColor="@color/black"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueBtn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cornerRadius="25dp"
                    android:text="@string/next"
                    android:textSize="16sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:textAllCaps="false"
                    android:layout_margin="25dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/previosBtn"
                    android:layout_width="match_parent"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_height="70dp"
                    app:cornerRadius="25dp"
                    android:text="@string/log_in"
                    android:textSize="16sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:textAllCaps="false"
                    android:layout_marginStart="25sp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    app:strokeColor="@color/blue_500"
                    app:strokeWidth="2dp"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>