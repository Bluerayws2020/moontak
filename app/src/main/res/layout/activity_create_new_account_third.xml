<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewAccountThirdActivity"
    android:background="@drawable/register_background"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/included_tap"
            layout="@layout/login_app_bar"
            />

        <TextView
            android:id="@+id/signInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/included_tap"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/arabicsemibold"
            />
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/signInLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sector"
                    android:textColor="@color/blue_500"
                    android:textSize="19sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sector Type"
                    android:textColor="@color/blue_500"
                    android:textSize="17sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <Spinner
                        app:layoutDescription="@id/ownerNameET"
                        android:id="@+id/ownerNameET"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/spinner_icon"
                        android:padding="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="horika type"
                    android:textColor="@color/blue_500"
                    android:textSize="17sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="25dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_edit_text"
                    >

                    <Spinner
                        app:layoutDescription="@id/establishmentNameET"
                        android:id="@+id/establishmentNameET"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/empty_edit_text"
                        android:textSize="16sp"
                        android:textColor="#7F7F7F"
                        android:fontFamily="@font/arabicsemibold"
                        android:paddingStart="15sp"
                        android:singleLine="true"
                        android:paddingEnd="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/spinner_icon"
                        android:padding="5dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cornerRadius="25dp"
                    android:text="Next"
                    android:textSize="16sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:textAllCaps="false"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"

                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createNewAccountBtn"
                    android:layout_width="match_parent"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_height="60dp"
                    app:cornerRadius="25dp"
                    android:text="Previous"
                    android:textSize="16sp"
                    android:fontFamily="@font/arabicsemibold"
                    android:textAllCaps="false"
                    android:layout_margin="22dp"
                    app:strokeColor="@color/blue_500"
                    app:strokeWidth="2dp"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>