<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.blueray.fragments.">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/included_tap"
            layout="@layout/inner_action_bar"/>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deals_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/included_tap"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:itemCount="10"
            tools:listitem="@layout/deals_rec_item"
            />
        <me.relex.circleindicator.CircleIndicator2
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/deals_rec"
            app:ci_drawable="@color/blue_500"
            app:ci_drawable_unselected="@color/textGrey47"
            android:id="@+id/indicator"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/addCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#E3F8F8"
            app:cardCornerRadius="25dp"
            android:layout_margin="25dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp"
                >
                <TextView
                    android:id="@+id/addTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="liquidation"
                    android:textSize="20dp"
                    android:textColor="@color/blue_500"
                    android:fontFamily="@font/arabicsemibold"
                    />
                <TextView
                    android:id="@+id/addDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addTitle"
                    android:text="not real text to be changed"
                    android:textSize="16dp"
                    android:fontFamily="@font/arabicsemibold"
                    />


                <ir.samanjafari.easycountdowntimer.EasyCountDownTextview
                    android:id="@+id/counter"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@color/blue_500"
                    app:colonColor="@color/white"
                    app:days="1"
                    app:daysLabel=" "
                    app:digitBackground="@color/blue_500"
                    app:hours="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/daytimeLayout"
                    app:minute="1"
                    app:second="10"
                    app:setAnimation="true"
                    app:showDays="true"
                    app:showHours="true"
                    app:start_automatically="false"
                    app:textColor="@color/white"
                    app:textSize="20sp"
                    app:useFarsiNumeral="false"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:id="@+id/daytimeLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    app:layout_constraintEnd_toEndOf="@id/counter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addDescription">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:fontFamily="@font/arabicregular"
                        android:text="days"
                        android:textAlignment="viewStart"
                        android:textSize="10sp"
                        android:textColor="@color/textGrey47" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:fontFamily="@font/arabicregular"
                        android:text="hour"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textColor="@color/textGrey47" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:fontFamily="@font/arabicregular"
                        android:text="minute"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textColor="@color/textGrey47" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:fontFamily="@font/arabicregular"
                        android:text="second"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textColor="@color/textGrey47" />

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/addDescription"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/add_image"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/categoriesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            app:layout_constraintTop_toBottomOf="@id/addCard"
            android:textColor="@color/blue_500"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/arabicregular"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/categoriesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/categoriesRv"
            tools:listitem="@layout/category_home_rv_item"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>